root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
line_length = 79
multi_line_output = 4
balanced_wrapping = true
use_parentheses = true
default_section = THIRDPARTY
known_first_party = wagtail_personalisation,tests

[*.json, *.yml, *rc]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
